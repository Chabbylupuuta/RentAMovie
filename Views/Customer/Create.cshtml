<script>
    const cities = {
        1: "Chililabombwe", 2: "Chingola", 3: "Chipata", 4: "Choma", 5: "Kabwe",  6: "Kafue", 7: "Kalulushi", 
        8: "Kapiri Mposhi", 9: "Kasama", 10: "Kitwe", 11: "Livingstone", 12: "Luanshya", 13: "Lundazi", 14: "Lusaka", 
        14: "Mansa", 15: "Mazabuka", 16: "Mbala", 17: "Mongu", 18: "Monze", 19: "Mpika", 20: "Mufulira", 21: "Nakonde", 22: "Ndola",
        23: "Petauke", 24: "Serenje", 25: "Solwezi"
    };

    const selectCityDropdown = document.getElementById("selectCity");

    for (let key in cities)
    {
        let option = document.createElement("option");
        option.setAttribute('value', cities[key]);

        let optionText = document.createTextNode(cities[key]);
        option.appendChild(optionText);
        selectCityDropdown.appendChild(option);
    }
</script>